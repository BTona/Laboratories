<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="0dp"
    android:layout_height="568dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="114dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="152dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="LeonelMessi"
            android:onClick="SetTeamIcon"
            app:srcCompat="@drawable/leomesi"
            tools:srcCompat="@drawable/leomesi" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="Lewandoski"
            android:onClick="SetTeamIcon"
            app:srcCompat="@drawable/lew"
            tools:srcCompat="@drawable/lew" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="DanielAlves"
            android:onClick="SetTeamIcon"
            app:srcCompat="@drawable/Dalves"
            tools:srcCompat="@drawable/Dalves" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="Mbappe"
            android:onClick="SetTeamIcon"
            app:srcCompat="@drawable/mbappe"
            tools:srcCompat="@drawable/mbappe" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="MemphisDepay"
            android:onClick="SetTeamIcon"
            app:srcCompat="@drawable/memphis"
            tools:srcCompat="@drawable/memphis" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="CristianoRonaldo"
            android:onClick="SetTeamIcon"
            android:visibility="visible"
            app:srcCompat="@drawable/ronaldo"
            tools:srcCompat="@drawable/ronaldo" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load from phone" />

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

